header.header
    .header__wrapper
        .header__column
            a(href=routes.home)
                i.fab.fa-youtube
        .header__column
            form(action=routes.search, method="get")
                input(type="text", placeholder="Search by term...", name="term")
        .header__column
            ul
                if !loggedUser
                    li
                        a(href=routes.join) Join
                    li
                        a(href=routes.login) Log In
                else 
                    li
                        a(href=`/videos${routes.upload}`) Upload
                    li
                        if loggedUser.avatarUrl
                            a(href=routes.me)
                                img.u-avatar.u-avatar-in-header(src=`/${loggedUser.avatarUrl}`)
                        if !loggedUser.avatarUrl
                            a(href=routes.me)
                                .u-avatar-basic.u-avatar-in-header=loggedUser.name[0]
                    li
                        a(href=routes.logout) Log Out
